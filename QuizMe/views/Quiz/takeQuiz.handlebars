    <section class="section-take">
        <div class="container-fluid">
            <div class="flex-center h-75">
                <div class="signin-header">
                    Quiz
                </div>
            </div>
            <div class="card mx-auto">
                <div class="card-body">
                    <form action="/QuizMe/QuizSubmit" method="POST">
                        <!-- QUESTIONS -->
                        {{#each Questions}}
                            <div class="text-center">
                                <p>{{content}}</p>
                            </div>
                            <div class="form-group">
                                <select name="Submission" class="form-control" id="exampleFormControlSelect1">
                                    <option>Select an Option</option>
                                    {{#each option}}
                                        <option value="{{this}}">{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        {{/each}}
                        <div class="form-group">
                            <div class="text-center buffer2">
                                <button type="submit" class="btn btn-block btn-lg" style="background-color: #1e3799">
                                    <div class="white-text">
                                        Submit
                                    </div>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>