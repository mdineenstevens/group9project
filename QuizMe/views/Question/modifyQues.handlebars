<section class="section">
    <div class="container-fluid">
        <div class="flex-center h-75">
            <div class="signin-header">
                Quiz Creator
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card mx-auto">
                    <div class="card-header">
                        <div class="signin-text">
                            Question Generator
                        </div>
                    </div>
                    <div class="card-body">
                        <form id="CreateQues-form">
                            <div class="form-group row">
                                <label for="question" class="col-sm-2 col-form-label">Question:</label>
                                <div class="col-sm-10">
                                    <input type="text" name="Ques_content" class="form-control" placeholder="Your Question"
                                        value="{{Ques.content}}" id="question">
                                </div>
                            </div>
                            <label for="check-boxes" class="text-center">(Please indicate the correct
                                answer(s) below by selecting the
                                checkbox option)</label>

                            {{#each Ques.answers }}
                            <div class="form-row buffer">
                                <div class="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="op" value="3" id="check-boxes"
                                            checked>
                                        <label class="form-check-label" for="answer1">
                                            Answer:
                                        </label>
                                    </div>
                                </div>
                                <div class="col-10">
                                    <input type="text" class="form-control" name="option" placeholder="Option" value="{{this}}"
                                        id="answer1">
                                </div>
                            </div>
                            {{/each}}

                            {{#each Ques.options}}
                            <div class="form-row buffer">
                                <div class="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="op" value={{@index}} id="check-boxes">
                                        <label class="form-check-label" for="answer1">
                                            Answer:
                                        </label>
                                    </div>
                                </div>
                                <div class="col-10">
                                    <input type="text" class="form-control" name="option" placeholder="Option" value="{{this}}"
                                        id="answer1">
                                </div>
                            </div>
                            {{/each}}


                            <!-- error -->
                            <div id="error-box-crt" class="form-group">
                                {{!-- {{#if HasRegErr}}
                                <p> {{RegErr}} </p>
                                {{/if}} --}}
                            </div>



                            <div class="form-group">
                                <div class="text-center buffer2">
                                    <button type="button" id="CreateQues-btn" class="btn-primary btn-block btn-lg"
                                        style="background-color: #1e3799">
                                        Save
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

