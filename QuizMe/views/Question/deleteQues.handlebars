<section class="section">
    <div class="container-fluid">
        <div class="flex-center h-75">
            <div class="signin-header">
                Quiz Creator
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card mx-auto">
                    <div class="card-header">
                        <div class="signin-text">
                            Question Generator
                        </div>
                    </div>
                    <div class="card-body">
                        <form id="delQues-form">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Question:</label>
                                <div class="col-sm-10">
                                    <p type="text" class="form-control">{{Ques.content}}
                                </div>
                            </div>
                            {{!-- <p class="text-center">(Please indicate the correct answer(s) below by selecting the
                                checkbox option)</p> --}}
                            <!-- QUESTION 1 -->
                            {{#each Ques.answers}}
                            <div class="form-row buffer">
                                <div class="col">
                                    <div class="form-check">
                                        <p class="form-check-input" id="defaultCheck1" checked>
                                            <label class="form-check-label" for="defaultCheck1">
                                                Answer:
                                            </label>
                                    </div>
                                </div>
                                <div class="col-10">
                                    <p type="text" class="form-control">{{this}}</p>
                                </div>
                            </div>
                            {{/each}}

                            {{#each Ques.options}}
                            <div class="form-row buffer">
                                <div class="col">
                                    <div class="form-check">
                                        <p class="form-check-input" id="defaultCheck1">
                                            <label class="form-check-label" for="defaultCheck1">
                                                Option:
                                            </label>
                                    </div>
                                </div>
                                <div class="col-10">
                                    <p type="text" class="form-control">{{this}}</p>
                                </div>
                            </div>
                            {{/each}}


                            <!-- error -->
                            <div id="error-box-crt" class="form-group">
                                {{!-- {{#if HasRegErr}}
                                <p> {{RegErr}} </p>
                                {{/if}} --}}
                            </div>



                            <div class="form-group">
                                <div class="text-center buffer2">
                                    <button type="button" id="delQues-btn" class="btn btn-block btn-lg" style="background-color: #1e3799">
                                        <div class="white-text">
                                            Delete
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</section>

