<section class="section" id="section">
    <div class="container-fluid">
        <div class="flex-center h-75">
            <div class="signin-header">
                Search Results
            </div>
        </div>
        <div class="card mx-auto h-100">
            {{#if result.length}} {{!result being the array of questions searched for}}
            {{#each result}}
            <div class="card-body">
                <form>
                    <div class="form-group row">
                        <div class="col">
                            {{!-- <div>{{creator}}</div> {{!name of the question creator}} --}}
                            <div>{{content}}</div> {{!The prompt for the question}}
                            <div>Answers: {{answers}}</div> {{!answer to the question}}
                            <div>Options</div>
                            <ul>
                                {{#each options}} {{!options are the answer choices that a candidate can choose from}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="col2">
                            <a class="btn btn-primary btn-lg make-it-blue" type="submit" href="http://localhost:3000/QuizMeCreator/modifyQues/{{_id}}">Edit
                                Question</a>
                        </div>
                        <div class="col2">
                            <a class="btn btn-lg make-it-blue" type="submit" href="http://localhost:3000/QuizMeCreator/deleteQues/{{_id}}">Delete</a>
                        </div>
                    </div>
                </form>
            </div>
            {{/each}}
            {{else}} {{!if there are no results}}
            <div class="card-body">
                There are no results
            </div>
            {{/if}}
        </div>
    </div>
</section>
